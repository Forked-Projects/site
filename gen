makehtml() {
name=$1;
echo '<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="style.css">
  </head>
  <body>
    <header>vall.su</header>
    <div id="main">' > ~/site/cooked/$name.html;

sed '/^http/ s:.*:<a href="&" target="_blank">&</a>:' ~/site/raw/$name.txt | \
sed 's/$/<br>/' >> ~/site/cooked/$name.html;

echo '</div>
    <footer></footer>
  </body>
</html>' >> ~/site/cooked/$name.html;
}

makehtml index;
makehtml books;
makehtml links;
makehtml freebsd_postinstall;
makehtml notes;

mv ~/site/cooked/index.html ~/site/;
