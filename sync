dir=$(dirname $0);

if [ $1 = 'down' ]
then svnlite update $dir;
fi;

makehtml() {
name=$1;
echo '<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
  <div id="wrapper">
    <header>
      <a href="/">vall.su</a>
    </header>
    <div id="main">' > $dir/cooked/$name.html;
sed '/^http/ s:.*:<a href="&" target="_blank">&</a>:' $dir/raw/$name.txt | \
sed 's/$/<br>/' >> $dir/cooked/$name.html;
echo '    </div>
    <div id="menu">
      <ul>' >> $dir/cooked/$name.html;
ls -1 $dir/raw/ | sed 's/.txt$//' | sed '/index/d' | \
sed 's:.*:      <li><a href="/cooked/&.html">&</a></li>:' \
>> $dir/cooked/$name.html;
echo '      </ul>
    </div>
  </div>
  </body>
</html>' >> $dir/cooked/$name.html;
}

for i in $(ls -1 $dir/raw/ | sed 's/.txt$//');
do makehtml $i;
done;
mv $dir/cooked/index.html $dir/;

svnlite status $dir | grep ^'?' | sed 's/?  *//' | xargs svnlite add;
svnlite status $dir | grep ^'!' | sed 's/!  *//' | xargs svnlite del;
svnlite commit -m "Update `date +%d-%h-%Y_%H-%M`" $dir;
svnlite status -uv $dir;
