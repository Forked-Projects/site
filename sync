dir=$(dirname $0);

makehtml() {
name=$1;
echo '<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
    <header>
      <a href="/">vall.su</a>
    </header>
    <section>
      <nav>' > $dir/cooked/$name.html;
echo '
books
links
notes
freebsd_postinstall
firefox
assembler
' | sed '/^$/d' | sed 's:.*:        <a href="/cooked/&.html">&</a>:'\
>> $dir/cooked/$name.html;
echo -e '      </nav>\n      <main>' >> $dir/cooked/$name.html;
sed '/^http/ s:.*:<a href="&" target="_blank">&</a>:' $dir/raw/$name.txt \
>> $dir/cooked/$name.html;
echo '      </main>
    </section>
  </body>
</html>' >> $dir/cooked/$name.html;
}

if [ `svnliteversion $dir | sed 's/:.*//; s/M$//'` -lt `svnlite status -u $dir \
 | grep '^Status' | cut -d ':' -f 2` ]
then
  svnlite update $dir;
  exec $SHELL $(readlink -f $0);
fi;

for i in $(ls -1 $dir/raw/ | sed 's/.txt$//');
do makehtml $i;
done;
mv $dir/cooked/index.html $dir/;

svnlite status $dir | grep ^'?' | sed 's/?  *//' | xargs svnlite add;
svnlite status $dir | grep ^'!' | sed 's/!  *//' | xargs svnlite del;
svnlite commit --username vallnoob -m "Update `date +%d-%h-%Y_%H-%M`" $dir;
svnlite update $dir;
svnlite status -uv $dir;
